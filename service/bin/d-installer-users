# TEMPORARY overwrite of Y2DIR to use DBus for communication with dependent yast modules
ENV["Y2DIR"] = File.expand_path("../lib/dinstaller/dbus/y2dir", __dir__)

$LOAD_PATH.unshift File.expand_path("../lib", __dir__)

require "rubygems"
require "bundler/setup"

require "eventmachine"
require "dinstaller/dbus/users_service"

logger = Logger.new($stdout)

EM.run do
  service = DInstaller::DBus::UsersService.new(logger)
  service.export
  EventMachine::PeriodicTimer.new(0.1) { service.dispatch }
end
